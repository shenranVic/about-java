<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.my.stu_course.stu_cour.mapper.StuManageMapper">

    <resultMap id="stuMap" type="com.my.stu_course.stu_cour.model.StuInfo">
        <id property="id" column="id"/>
        <result property="stuId" column="stu_id"/>
        <result property="stuName" column="stu_name"/>
        <result property="stuSex" column="stu_sex"/>
        <result property="stuAge" column="stu_age"/>
        <result property="stuEthnic" column="stu_ethnic"/>
        <result property="stuClass" column="stu_class"/>
        <result property="stuState" column="stu_state"/>
        <result property="createTime" column="create_time"/>
        <result property="createBy" column="create_by"/>
        <result property="updateTime" column="update_time"/>
        <result property="updateBy" column="update_by"/>
    </resultMap>

    <resultMap id="nationMap" type="com.my.stu_course.stu_cour.model.Nation">
        <id property="id" column="id"/>
        <result property="nation" column="nation"/>
    </resultMap>


    <select id="selectAll" resultMap="stuMap">
        select * from stu_info;
    </select>

    <select id="selectStuById" parameterType="integer" resultMap="stuMap">
        select * from stu_info where  stu_id=#{stuId};
    </select>
    <select id="selectNationByName" resultMap="nationMap">
        select * from sys_nation where  nation=#{nation};
    </select>
    <select id="selectStuByStuId" resultMap="stuMap">
        select * from stu_info where stu_id=#{stuId}
    </select>
    <!--    单条数据插入-->
    <insert id="stuInsert" parameterType="com.my.stu_course.stu_cour.model.StuInfo">
        insert into stu_info(stu_id,stu_name,stu_sex,stu_age,stu_ethnic,stu_class,stu_state,create_time,create_by,update_time,update_by)
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
            <if test="stuId != null and stuId != ''"> #{stuId},</if>
            <if test="stuName != null and stuName != ''"> #{stuName},</if>
            <if test="stuSex != null and stuSex != ''">#{stuSex},</if>
            <if test="stuAge != null and stuAge != ''">#{stuAge},</if>
            <if test="stuEthnic != null and stuEthnic != ''">#{stuEthnic},</if>
            <if test="stuClass != null and stuClass != ''">  #{stuClass},</if>
            <if test="stuState != null and stuState != ''">  #{stuState},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="createBy != null and createBy != ''">  #{createBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="updateBy != null and updateBy != ''">  #{updateBy},</if>
        </trim>
    </insert>

<!--    单条数据修改-->
    <update id="stuUpdate" parameterType="StuInfo">
        update stu_info left join stu_course on stu_info.stu_id=stu_course.stu_id
        <trim prefix="SET" suffixOverrides=",">
            <if test="stuId   != null and stuId   != ''">stu_info.stu_id= #{stuId},stu_course.stu_id= #{stuId},</if>
            <if test="stuName != null and stuName != ''">stu_info.stu_name= #{stuName},stu_course.stu_name= #{stuName},</if>
            <if test="stuSex != null and stuSex != ''">stu_info.stu_sex=#{stuSex},stu_course.stu_sex=#{stuSex},</if>
            <if test="stuAge != null and stuAge != ''">stu_info.stu_age=#{stuAge},stu_course.stu_age=#{stuAge},</if>
            <if test="stuEthnic != null and stuEthnic != ''">stu_info.stu_ethnic=#{stuEthnic},</if>
            <if test="stuClass != null and stuClass != ''">  stu_info.stu_class=#{stuClass},</if>
            <if test="stuState != null and stuState != ''">  stu_info.stu_state=#{stuState},</if>
            <if test="updateTime != null">stu_info.update_time=#{updateTime},</if>
            <if test="updateBy != null and updateBy != ''"> stu_info.update_by= #{updateBy},</if>
        </trim>
        where stu_info.id=#{id};

    </update>
<!--    "删除学生记录"-->
    <update id="stuDelete" parameterType="Integer">
        update stu_info left join stu_course on stu_info.stu_id=stu_course.stu_id set stu_state=2,state=1 where stu_info.stu_id=#{id};
    </update>
</mapper>

